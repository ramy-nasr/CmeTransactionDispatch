{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Dispatch": {
    "AllowedExtensions": [ ".xml" ]
  },
  "Kafka": {
    "Producer": {
      "BootstrapServers": "localhost:9092",
      "Topic": "transactions",
      "ClientId": "transaction-dispatch-api",
      "Acks": "all",
      "BatchSizeBytes": 1048576,
      "LingerMilliseconds": 5,
      "MessageTimeoutMilliseconds": 30000,
      "CompressionType": "snappy"
    }
  }
}
